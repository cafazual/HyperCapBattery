<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvCelda1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celda 1: "
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/tvCelda2"
        android:text="Celda 2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/tvCelda1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvCelda3"
        android:text="Celda 3:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/tvCelda2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvCelda4"
        android:text="Celda 4:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/tvCelda3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvCelda5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celda 5: "
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/tvCelda4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/custom_text_view"
        android:text="A continuación podrá ver los voltajes de las celdas en HyperCap Battery."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/custom_button"
        android:text="Salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Esperando..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCelda1result"
        android:layout_alignBaseline="@+id/tvCelda1"
        android:layout_alignBottom="@+id/tvCelda1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="2dp" />

    <TextView
        android:text="Esperando..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCelda2result"
        android:layout_below="@+id/tvCelda1result"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Esperando..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCelda3result"
        android:layout_below="@+id/tvCelda2result"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Esperando..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCelda4result"
        android:layout_below="@+id/tvCelda3result"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Esperando..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCelda5Result"
        android:layout_below="@+id/tvCelda4result"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Voltaje Total: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/tvCelda5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Esperando..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVoltaje"
        android:layout_above="@+id/custom_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Esperando..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvControlResult"
        android:layout_alignBottom="@+id/tvControl"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="right" />

    <TextView
        android:text="Control de \nCarga:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvControl"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>